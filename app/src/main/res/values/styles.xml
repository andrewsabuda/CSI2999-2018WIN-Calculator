<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/fontSizeCalcField</item>
        <item name="android:textAlignment" tools:ignore="NewApi">textEnd</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">@dimen/fontSizeCalcButtons</item>
    </style>

    <style name="AppTheme.Button.Primary" parent="AppTheme.Button">
        <item name="backgroundTint" tools:ignore="NewApi">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Button.PrimaryAlternate" parent="AppTheme.Button">
        <item name="backgroundTint" tools:ignore="NewApi">@color/colorPrimaryAlternate</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Text.Tabs" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/fontSizeTabNames</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

</resources>
