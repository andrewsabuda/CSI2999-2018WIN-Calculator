<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeSci"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    tools:context=".ScientificFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/editScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextCalculatorScreenSci"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/fontSizeSciCalcField"
                android:inputType="number"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eigthRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSineSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonSine"
                android:textSize="@dimen/fontSizeSciCalcButtons"
                 />

            <Button
                android:id="@+id/buttonCosineSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonCosine"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonTangentSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonTangent"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonPiSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonPi"
                android:textSize="@dimen/fontSizeSciCalcButtons" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/seventhRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonLnSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonLn"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonExponentSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonExp"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonSquaredSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonSquared"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonFactorialSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonFactorial"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifthRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonClearSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonClear"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonMultiplySci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonMultiply"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonDivideSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonDivide"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonDeleteSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonDelete"
                android:textSize="@dimen/fontSizeSciCalcButtons" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSevenSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonSeven"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonEightSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonEight"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonNineSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonNine"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonModuloSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonModulo"
                android:textSize="@dimen/fontSizeSciCalcButtons" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonFourSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonFour"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonFiveSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonFive"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonSixSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonSix"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonSubtractSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonSubtract"
                android:textSize="@dimen/fontSizeSciCalcButtons" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonOneSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonOne"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonTwoSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/buttonFour"
                android:layout_weight="1"
                android:text="@string/buttonTwo"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonThreeSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonThree"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonAddSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonAdd"
                android:textSize="@dimen/fontSizeSciCalcButtons" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonZeroSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonZero"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonDecimalPointSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonDecimalPoint"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonParenthesesSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonParenthesis"
                android:textSize="@dimen/fontSizeSciCalcButtons" />

            <Button
                android:id="@+id/buttonEqualsSci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonEquals"
                android:textSize="@dimen/fontSizeSciCalcButtons" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
